{% layout settings.customer_layout %}

<div id="template" class="frame">
  <div class="pure-g-r">
    <div class="pure-u-1-2 pur-u-med-1-2 pure-form standard pure-form-stacked">
          <h1>Activate Account</h1>
          
      
               {% form 'activate_customer_password' %}
                {{ form.errors | default_errors }}
      
                <div class="clearfix large_form">
                 
                  <input placeholder="password" type="password" value="" name="customer[password]" id="customer_password"  class="large" size="30" />
                </div>
      
                <div class="clearfix large_form">
                 
                  <input placeholder="CONFIRM PASSWORD" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large" size="30" />
                </div>
      
                
      
                <div class="action_bottom">
                  <p><input class="pure-button secondary" type="submit" value="SUBMIT" /></p>
                  <p><input type="submit" class="pure-button secondary" name="decline" id="customer_decline" value="Decline Invitation" /></p>
                </div>
              {% endform %}
      
         
        </div>
        <div class="pure-u-1-2 pur-u-med-1-2 pure-form standard pure-form-stacked">
				<p class="note">Create your password to activate your account</p>
    	</div>
    
    
  </div>

 

  
</div>